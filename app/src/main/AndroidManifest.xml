<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.experiencers.ui">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.experiencers.app.App"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Movie">
        <activity android:name="com.experiencers.ui.movie.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".movie.MovieWebView"/>
        <activity android:name=".movie.RecentlySearchActivity"/>
    </application>

</manifest>